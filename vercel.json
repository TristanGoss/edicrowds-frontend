{
  "rewrites": [
    // Serve the main SPA shell for the root path
    {
      "source": "/",
      "destination": "/index.html"
    },

    // For each prerendered route, serve the corresponding static HTML file
    // These files live in the /public directory, and are generated by the prerender script at build time
    {
      "source": "/(contact|privacy|about|how|terms)",
      "destination": "/$1.html"
    },

    // Fallback: all other paths go to the SPA's index.html
    // This allows the client-side router (React Router) to take over for dynamic routes
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
